                <td><%= link_to(fight.attacker.username, profile_path(fight.attacker.username))  %> </td> 
                <td><%= link_to(fight.defender.username, profile_path(fight.defender.username))  %> </td> 
                <td><%= fight.time.strftime("%a %b %d %H:%M:%S") %> </td> 
              </tr>
            <% end %>
          </table>
        <% end %>
